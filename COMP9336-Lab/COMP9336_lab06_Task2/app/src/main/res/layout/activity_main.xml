<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task2Activity">

    <TextView
        android:id="@+id/usage_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="@string/waiting" />

    <TextView
        android:id="@+id/initial_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="@string/initial_level_of_battery"
        android:layout_below="@id/usage_time"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/final_level"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:text="@string/final_level"
        android:layout_below="@id/initial_level"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/consumed_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="@string/consumed_battery"
        android:layout_below="@id/final_level"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
